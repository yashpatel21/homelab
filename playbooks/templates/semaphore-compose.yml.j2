# Modern Docker Compose format (2025 standard - no version needed)
# This file is generated by Ansible - do not edit manually!

services:
  mysql:
    image: mysql:8.0
    container_name: semaphore-mysql
    restart: unless-stopped
    environment:
      # Security: Generate random root password (not used)
      MYSQL_RANDOM_ROOT_PASSWORD: 'yes'
      # Semaphore database configuration
      MYSQL_DATABASE: semaphore
      MYSQL_USER: semaphore
      MYSQL_PASSWORD: "{{ mysql_password }}"
    volumes:
      # Persistent database storage
      - {{ semaphore_data_dir }}/mysql:/var/lib/mysql
    networks:
      - {{ docker_network_name }}
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 10s
      retries: 10
      start_period: 30s

  semaphore:
    image: semaphoreui/semaphore:{{ semaphore_version }}
    container_name: semaphore
    restart: unless-stopped
    depends_on:
      mysql:
        condition: service_healthy
    environment:
      # Database connection
      SEMAPHORE_DB_USER: semaphore
      SEMAPHORE_DB_PASS: "{{ mysql_password }}"
      SEMAPHORE_DB_HOST: mysql
      SEMAPHORE_DB_PORT: 3306
      SEMAPHORE_DB_DIALECT: mysql
      SEMAPHORE_DB: semaphore
      
      # Admin user configuration
      SEMAPHORE_ADMIN: admin
      SEMAPHORE_ADMIN_PASSWORD: "{{ semaphore_admin_password }}"
      SEMAPHORE_ADMIN_NAME: "Admin"
      SEMAPHORE_ADMIN_EMAIL: "admin@{{ homelab_domain }}"
      
      # Semaphore configuration  
      SEMAPHORE_ACCESS_KEY_ENCRYPTION: "{{ semaphore_access_key_encryption }}"
      SEMAPHORE_PLAYBOOK_PATH: /tmp/semaphore/
      
      # Skip interactive setup
      SEMAPHORE_LDAP_ACTIVATED: 'no'
      
      # System settings
      TZ: "{{ timezone }}"
      SEMAPHORE_WEB_HOST: 0.0.0.0
    volumes:
      # Semaphore configuration and data
      - {{ semaphore_data_dir }}/data:/etc/semaphore
      # SSH keys for accessing your servers
      - /home/yash/.ssh:/root/.ssh:ro
      # Docker socket for container management
      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      # Expose Semaphore web interface
      - "{{ semaphore_port }}:3000"
    networks:
      - {{ docker_network_name }}
    labels:
      # Traefik configuration for domain access
      - "traefik.enable=true"
      - "traefik.http.routers.semaphore.rule=Host(`semaphore.{{ homelab_domain }}`)"
      - "traefik.http.routers.semaphore.entrypoints=websecure"
      - "traefik.http.routers.semaphore.tls.certresolver=myresolver"
      - "traefik.http.services.semaphore.loadbalancer.server.port=3000"
      # Watchtower auto-update
      - "com.centurylinklabs.watchtower.enable=true"
    # Remove health check for now to avoid conflicts during setup
    # healthcheck:
    #   test: ["CMD", "curl", "-f", "http://localhost:3000/api/ping"]
    #   interval: 30s
    #   timeout: 10s
    #   retries: 3
    #   start_period: 60s

networks:
  {{ docker_network_name }}:
    external: true
    name: {{ docker_network_name }}
